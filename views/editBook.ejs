<%- include('partials/header', { title: title }) %>

<h2>Edit Book</h2>
<form action="/books/edit/<%= book.id %>" method="post">
  <label for="title">Book Title:</label><br>
  <input type="text" id="title" name="title" value="<%= book.title %>" required><br>

  <label for="author">Author:</label><br>
  <input type="text" id="author" name="author" value="<%= book.author %>"><br>

  <label for="rating">Rating (0-5):</label><br>
  <input type="number" id="rating" name="rating" value="<%= book.rating %>" min="0" max="5"><br>

  <label for="review">Review/Notes:</label><br>
  <textarea id="review" name="review"><%= book.review %></textarea><br>

  <label for="read_date">Date Read:</label><br>
  <input type="date" id="read_date" name="read_date" value="<%= book.read_date.toISOString().split('T')[0] %>"><br>

  <label for="isbn">ISBN (for cover):</label><br>
  <input type="text" id="isbn" name="isbn" value="<%= book.isbn %>"><br>

  <button type="submit">Update Book</button>
</form>

<%- include('partials/footer') %>
